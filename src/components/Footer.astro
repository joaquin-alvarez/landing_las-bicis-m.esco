<style>
	.footer {
		background-color: var(--primary-blue);
		color: white;
		padding: 3rem 0;
		text-align: center;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.customer-service {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.phone-icon {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.phone-icon svg {
		color: white;
	}

	.service-info h2 {
		font-family: var(--font-heading);
		font-size: 1.5rem;
		margin: 0;
		font-weight: 700;
	}

	.service-info h3 {
		font-family: var(--font-heading);
		font-size: 1.75rem;
		margin: 0.25rem 0 0;
		font-weight: 700;
	}

	.partners {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 2.5rem;
		margin-bottom: 2rem;
	}

	.partner-logo img {
		height: 40px;
		width: auto;
		filter: brightness(0) invert(1);
	}

	.contact-info {
		margin-bottom: 1.5rem;
	}

	.contact-info p {
		margin: 0.5rem 0;
		font-family: var(--font-body);
		font-size: 1rem;
	}

	.footer-copyright p {
		font-size: 0.875rem;
		opacity: 0.8;
	}

	@media (min-width: 768px) {
		.partners {
			gap: 4rem;
		}

		.partner-logo img {
			height: 50px;
		}
	}
</style>
