	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: inline-block;
		width: 40px;
		height: 40px;
		background-color: var(--primary-blue);
		color: var(--white);
		text-align: center;
		line-height: 40px;
		border-radius: 50%;
		transition: all 0.3s ease;
	}

	.social-links a:hover {
		background-color: var(--secondary-blue);
		transform: translateY(-2px);
	}

	.contact-info p {
		margin-bottom: 0.5rem;
		color: var(--gray-300);
	}

	.footer-bottom {
		border-top: 1px solid var(--gray-600);
		padding-top: 2rem;
	}

	.footer-legal {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		text-align: center;
	}

	.footer-legal p {
		color: var(--gray-400);
		font-size: 0.9rem;
	}

	.legal-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.legal-links a {
		color: var(--gray-400);
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.legal-links a:hover {
		color: var(--white);
	}

	@media (min-width: 640px) {
		.footer-content {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 768px) {
		.footer-content {
			grid-template-columns: repeat(4, 1fr);
		}

		.footer-legal {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
	}
</style>
