<style>
	.stations-section {
		background-color: var(--gray-100);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header h2 {
		color: var(--primary-blue);
		margin-bottom: 1rem;
	}

	.section-header p {
		font-size: 1.1rem;
		color: var(--primary-blue);
		max-width: 600px;
		margin: 0 auto;
	}

	.stations-content {
		display: flex;
		justify-content: center;
	}

	.map-container {
		background: var(--white);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		box-shadow: var(--shadow-md);
		width: 80%;
	}

	.map-placeholder {
		height: 400px;
		background: linear-gradient(135deg, var(--light-blue) 0%, var(--gray-200) 100%);
		border-radius: var(--border-radius);
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: 500;
		color: var(--primary-blue);
		font-size: 1.1rem;
	}

	.stations-stats {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	.stat-item {
		text-align: center;
		padding: 2rem;
		background: var(--white);
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-sm);
		transition: transform 0.3s ease;
	}

	.stat-item:hover {
		transform: translateY(-4px);
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--primary-blue);
		font-family: var(--font-heading);
		line-height: 1;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 1rem;
		color: var(--gray-600);
		font-weight: 500;
	}

	@media (min-width: 768px) {
		.map-placeholder {
			height: 500px;
		}
	}
</style>
