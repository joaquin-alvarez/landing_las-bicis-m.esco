---
const baseUrl = import.meta.env.BASE_URL;
---

<section class="hero">
	<div class="container">
		<div class="hero-content">
			<img src={`${import.meta.env.BASE_URL}/images/hero-bg.webp`} alt="Hero" class="hero-bg">
			<img src={`${import.meta.env.BASE_URL}/vectors/hero-ribbon.svg`} alt="" class="hero-ribbon">
			<div class="hero-card">
				<div class="card-logo">
					<img src={`${import.meta.env.BASE_URL}/vectors/bicis-logo.svg`} alt="Las Bicis" class="bicis-logo">
				</div>
				<div class="card-text">
					<p class="download-text">DESCARG√Å LA APP</p>
					<p class="app-name">"ESCOBAR 360"</p>
					<p class="small-text">En Google Play o App Store.</p>
				</div>
				<div class="app-buttons">
					<a href="#" class="app-button">
						<img src={`${import.meta.env.BASE_URL}/vectors/google_play_badge.svg`} alt="Google Play" class="store-badge">
					</a>
					<a href="#" class="app-button">
						<img src={`${import.meta.env.BASE_URL}/vectors/apple_badge.svg`} alt="App Store" class="store-badge">
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.container {
		padding: 0;
		margin: 0;
		max-width: 100%;
		position: relative;
	}

	.hero {
		padding: 0;
		position: relative;
	}

	.hero-content {
		position: relative;
		font-family: 'Syncopate', sans-serif;
	}

	.hero-bg {
		height: 100%;
		width: 100%;
		object-fit: contain;
	}

	.hero-ribbon {
		position: absolute;
		top: 0;
		right: 0;
		width: 80%;
		max-width: 1200px;
		z-index: 1;
	}
	
	@media (max-width: 768px) {
		.hero-ribbon {
			width: 95%;
			top: 5%;
		}
	}

	.hero-card {
		position: absolute;
		top: 20%;
		left: 10%;
		padding: 2rem;
		width: 330px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		border: 4px solid transparent;
		border-radius: 30px;
		background-image: linear-gradient(white, white), linear-gradient(250deg, var(--primary-blue), var(--primary-blue), transparent);
		background-origin: border-box;
		background-clip: padding-box, border-box;
		background-color: white;
		transition: all 0.3s ease;
	}

	.card-logo {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-bottom: 1.75rem;
	}

	.bicis-logo {
		width: 80%;
		height: auto;
		margin-bottom: 0.25rem;
	}

	.card-logo h2 {
		color: var(--primary-blue);
		font-weight: 700;
		font-size: 1.3rem;
		margin: 0;
		letter-spacing: 0.05em;
	}

	.card-text {
		margin-bottom: 1.75rem;
		margin-top: .75rem;
		width: 100%;
	}

	.download-text {
		color: var(--primary-blue);
		font-size: 1.2rem;
		font-weight: 500;
		margin: 0;
		line-height: 1.2;
	}

	.app-name {
		color: var(--primary-blue);
		font-size: 1.2rem;
		font-weight: 700;
		line-height: 1.2;
	}

	.small-text {
		font-family: 'Poppins', sans-serif;
		font-size: 1em;
		color: var(--gray-600);
		margin-top: 0.25rem;
		margin-bottom: 0.5rem;
	}

	.app-buttons {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.25rem;
		width: 100%;
	}

	.app-button {
		display: block;
		width: 100%;
	}

	.app-button img {
		max-width: 240px;
		width: 100%;
		height: auto;
	}

	@media (max-width: 768px) {
		.hero-bg {
			object-position: center;
			height: auto;
			min-height: 100vh;
		}
		
		.hero-card {
			left: 50%;
			transform: translateX(-50%);
			top: 15%;
			width: 85%;
			max-width: 330px;
			padding: 1.5rem;
		}
		
		.bicis-logo {
			width: 70%;
		}
		
		.download-text {
			font-size: 1rem;
		}
		
		.app-name {
			font-size: 1rem;
		}
		
		.small-text {
			font-size: 0.9rem;
		}
		
		.app-buttons {
			gap: 0.5rem;
		}
		
		.app-button img {
			max-width: 200px;
		}
	}
	
	@media (max-width: 400px) {
		.hero-card {
			top: 12%;
			padding: 1.25rem;
		}
		
		.bicis-logo {
			width: 65%;
		}
		
		.card-logo {
			margin-bottom: 1rem;
		}
		
		.card-text {
			margin-bottom: 1rem;
		}
	}
</style>
