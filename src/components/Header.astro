---
const baseUrl = import.meta.env.BASE_URL;
---

<header class="header">
	<div class="container">
		<div class="header-content">
			<div class="logos">
				<img src={`${import.meta.env.BASE_URL}/vectors/escobar-logo.svg`} alt="Escobar Progresa">
				<img src={`${import.meta.env.BASE_URL}/vectors/macro-logo.svg`} alt="Banco Macro">
			</div>
			<nav class="nav">
				<ul class="nav-list">
					<li><a href="#como-funciona">¿Cómo funciona?</a></li>
					<!-- <li><a href="#app">App</a></li> -->
					<li><a href="#estaciones">Estaciones</a></li>
					<li><a href="#precios">Precios</a></li>
					<li><a href="#las-bicis">Las Bicis</a></li>
					<li><a href="#faq">FAQ</a></li>
				</ul>
			</nav>
		</div>
	</div>
</header>

<style>
	.header {
		background-color: var(--secondary-blue);
		color: var(--white);	
		box-shadow: var(--shadow-sm);
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		height: 12vh;
	}

	.container {
		height: 100%;
	}

	.header-content {
		display: flex;
		height: 100%;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 0;
	}

	.logos {	
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.logos img {
		height: 40px;
		width: auto;
	}

	.nav-list {
		display: none;
		list-style: none;
		gap: 2rem;
	}

	.nav-list a {
		font-weight: 500;
		color: var(--white);
		transition: color 0.3s ease;
	}

	.nav-list a:hover {
		color: var(--accent-green);
	}

	@media (min-width: 768px) {
		.nav-list {
			display: flex;
		}
	}

	/* Add space for fixed header */
	:global(body) {
		padding-top: 12vh;
	}
</style>
